#!/bin/bash
echo "--------------- Starting custom assemble"

echo "--------------- Copying image_metadata.json"

if [[ $MAVEN_ARGS_APPEND == *"rain-forecast-process"* ]]; then
    mkdir -p /tmp/.s2i 
    cp  /tmp/src/rain-forecast-process/.s2i/image_metadata.json /tmp/.s2i/image_metadata.json
    if [ $? -ne 0 ]; then
      echo "-------- Fail to copy image metadata, failing build"
      exit 1
    fi
fi

/usr/local/s2i/assemble
rc=$?

exit $rc
